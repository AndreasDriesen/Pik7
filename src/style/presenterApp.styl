#PikPresenterApp


  body
    font-family Arial, sans-serif
    line-height 1.25
    color #000
  #PikPresenterAppWrapper
    position relative
    margin-left auto
    margin-right auto


  input, select
    font-size inherit


  iframe
    display block
    border none
    margin 0
    box-shadow 0 0 3em -0.2em rgba(#000, 0.5)
    background #FFF
    position absolute
    &:hover
      z-index 1337
  #PikFrame
    left 0
  #PikFramePreview
    right 0


  // Timer and slide counter
  #PikCounterContainer
    font-size 55%
    text-align:right
    position absolute
    top 11%
    right 0
  #PikSlideCounter, #PikTimer
    display block
  #PikSlideCounter
    font-weight bold
    font-size 2em
  #PikTimeElapsed
    font-weight bold
  #PikTimeCurrent
    font-size 0.8em


  // Controls
  #PikControlsContainer
    font-size 35%
    text-align:right
    position absolute
    bottom 11%
    right 0
    width 100%
    p
      margin 0.75em 0
    select
      width 20%
    a
      margin-left 0.5em
      text-decoration none
      border-bottom-width 0.1em
      border-bottom-style solid
      &:link, &:visited
        color inherit
        border-bottom-color currentcolor
      &:hover
        color inherit
        border-bottom-color transparent
      &:active
        color #C00
        border-bottom-color transparent
      &:before
        margin-right 0.25em

  // Advanced Options
  #PikPresenterOptions
    font-size 0.425em
    background #FFF
    box-shadow 0 0 3em -0.2em rgba(#000, 0.5)
    display table
    position absolute
    z-index 9000
    width 80%
    left 10%
    div
      display table-cell
      vertical-align middle
      padding 1em
    input[type=number]
      max-width 20%
    #PikOptionsClose
      margin-top 2.5em
      text-align right
      input
        font-weight bold
  #PikPresenterOptionsOverlay
    position absolute
    z-index 8999
    top 0
    left 0
    right 0
    bottom 0
    background rgba(#000, 0.75)
  #PikPresenterOptions:not(.open), #PikPresenterOptionsOverlay:not(.open)
    display none