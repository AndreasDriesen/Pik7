// Default app view styles

iframe
  display block
  border none
  height 100%
  width 100%
  margin 0
  padding 0

#PikControls
  background rgba(0, 0, 0, 0.95)
  border-radius 0.5em
  font-family Arial, sans-serif
  text-align center // For mobile
  line-height 1.25
  font-size 16px
  position absolute
  bottom 0.5em
  right 0.5em
  margin 0.5em 0 0 0.5em // For mobile
  padding 1em 1.6em 0.8em 1.6em
  opacity 0.3
  transition opacity 400ms
  &:hover
    opacity: 1

a
  font-weight bold
  text-decoration none
  transition color 400ms
  &:not(:last-child)
    margin-right 1.25em
  &:link, &:visited
    color #AAA
  &:hover
    color #FFF
  &:active
    color red



// Icons for control links
[class^='icon']:before
  margin-right 0.5em
  position relative
  top -1px
  font-family icons
  font-style normal
  font-weight normal
  speak none
.iconBrowse:before
  content '\2630' /* '☰' */
.iconReload:before
  content '\27f3' /* '⟳' */
.iconPrint:before
  content '\e716' /* '' */
.iconClone:before
  content '\e736' /* '' */
.iconPresenter:before
  content '\e74e' /* '' */