// Default app view styles

iframe
  display block
  border none
  height 100%
  width 100%
  margin 0
  padding 0

#PikControls
  background rgba(255, 255, 255, 0.8)
  border-radius 0.5em
  font-family Arial, sans-serif
  font-size 18px
  position absolute
  bottom 0.75em
  right 0.75em
  padding 1em 1.6em 0.8em 1.6em
  margin 0
  opacity 0.5
  transition opacity 400ms
  &:hover
    opacity: 1

a
  font-weight bold
  text-decoration none
  transition color 400ms
  &:not(:last-child)
    margin-right 1.25em
  &:link, &:visited
    color #555
  &:hover
    color #000
  &:active
    color red



// Icons for control links
[class^='icon']:before
  margin-right 0.5em
  position relative
  top -1px
  font-family icons
  font-style normal
  font-weight normal
  speak none
.iconBrowse:before
  content '\2630' /* '☰' */
.iconReload:before
  content '\27f3' /* '⟳' */
.iconPrint:before
  content '\e716' /* '' */
.iconClone:before
  content '\e736' /* '' */
.iconPresenter:before
  content '\e74e' /* '' */