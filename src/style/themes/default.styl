@media all

  body
    font-family Ubuntu, Arial, sans-serif
    line-height 1.55
  small
    font-size 0.5em
  input, output, button, keygen
    font-size inherit
  .clear
    clear both
  pre, code
    font-family Monaco, "Bitstream Vera Sans Mono", "DejaVu Sans Mono" "Lucida Console", Consolas, Terminal, monospace



@media screen

  body
    background #CFCFCF
    color #444
  #PikSlides .pikSlide
    box-sizing border-box
    font-size 0.85em
    background #FFF
    border 1px solid #CCC
    box-shadow 0 0 1.5em -0.5em #999
    width 96%
    height 96%
    margin 2%
    padding 0.5em 1.5em
    &:first-child
      text-align center

  h1
    color #000
    font-size 3.5em
    margin-top 0.25em
    margin-bottom 0.25em
    span
      display block
      font-size 0.5em
  h2
    font-size 1.45em
    line-height 1.25
    font-weight bold
    font-size 1.75em
    margin-top 0.25em
    margin-bottom 0
  h3
    margin 1em 1.5em

  p, ul, ol, p, pre, table
    margin 1.25em 0
  ul
    padding-left 1em
  ul ul
    padding-left 0.4em
  ol > li > ul
    padding-left 0
    margin-left 4%
  ul ul, ol ul, ul ol, li
    margin-top 0.4em
    margin-bottom 0.4em

  a
    color #083
    text-decoration none
    font-weight bold
    cursor pointer
    &:link, &:visited
      border-bottom 0.1em solid #083
    &:visited
      border-bottom 0.1em dotted #083
    &:hover, &:active
      color #000
      border-bottom 0.1em solid transparent
    &:focus
      outline 0
      color #FFF
      background #083
    &.imagelink
      border-bottom none

  pre, code
    font-family Monaco, "Bitstream Vera Sans Mono", "DejaVu Sans Mono" "Lucida Console", Consolas, Terminal, monospace
  pre
    overflow hidden
    line-height 1.4
    text-align left !important
    font-size 0.8em
  code
    background #F0F0F0
    padding 0.1em
  pre code
    background none
    padding 0
  blockquote, q
    font-style italic
  q
    quotes "\201E" "\201C" "\201A" "\2018"
  p.cite
    padding-left 1em
  blockquote + p.cite
    margin-top -0.5em

  kbd
    font normal .85em/1 "Lucida Grande", Lucida, Arial, sans-serif
    border-radius 0.2em
    border none
    background rgb(250, 250, 250)
    background linear-gradient(rgb(210, 210, 210), rgb(255, 255, 255))
    color rgb(50, 50, 50)
    text-shadow 0 0 2px rgb(255, 255, 255)
    box-shadow inset 0 0 1px rgb(255, 255, 255), inset 0 0 0.4em rgb(200, 200, 200), 0 0.1em 0 rgb(130, 130, 130), 0 0.11em 0 rgba(0, 0, 0, 0.4), 0 0.1em 0.11em rgba(0, 0, 0, 0.9)
    display inline-block
    line-height 1
    padding 0.2em 0.3em


@media print

  body
    background white
    color black
  pre
    line-height 1.1
  mark
    text-decoration underline