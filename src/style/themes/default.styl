@media all

  body
    font-family Ubuntu, Arial, sans-serif
    line-height 1.45
  small
    font-size 0.5em
  sub, sup
    font-size 0.75em
  input, output, button, keygen
    font-size inherit
  .clear
    clear both
  pre, code
    font-family Monaco, "Bitstream Vera Sans Mono", "DejaVu Sans Mono" "Lucida Console", Consolas, Terminal, monospace
  pre.prettyprint
    border none
  .pikSlide:first-child
    text-align center

  // Google code prettify
  .pln { color: #000; }
  .str { color: #060; }
  .kwd { color: #009; font-weight: bold; }
  .com { color: #900; font-style: italic; }
  .dec, .typ { color: #909; font-weight: bold; }
  .lit { color: #044; }
  .pun, .opn, .clo { color: #440; }
  .tag { color: #00C; font-weight: bold; }
  .atn { color: #000; }
  .atv { color: #090; }
  mark span
    &.pln, &.str, &.kwd, &.com, &.dec, &.typ, &.lit, &.pun, &.opn, &.clo, &.tag, &.atn, &.atv
      color #000


@media screen

  body
    background #CFCFCF
    color #444
  #PikSlides .pikSlide
    box-sizing border-box
    font-size 0.85em
    background #FFF
    box-shadow 0 0 1.5em -0.5em #999
    width 96%
    height 96%
    margin 2%
    padding 0.5em 1.5em
    &:first-child
      text-align center

    // Centered content
    &.center
      display -webkit-flex
      -webkit-flex-direction column
      -webkit-justify-content space-around
      > *
        margin 0 auto
        text-align center

    // Filling background image
    &.image
      background-size contain
      background-repeat no-repeat
      background-position center center

  .left
    text-align left
  .right
    text-align right
  .fill
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none

  h1
    color #000
    font-size 2.5em
    margin-top 0.4em
    margin-bottom 0.25em
    span
      display block
      font-size 0.5em
      margin-bottom 0.25em
    + p
      font-size 1.5em
      font-style italic
  .pikSlide:first-child h1
    font-size 3.5em
  h2
    font-size 1.4em
    line-height 1.2
    font-weight bold
    font-size 1.725em
    margin-top 0.25em
    margin-bottom 0
  h3
    margin 1em 0

  p, ul, ol, p, pre, table
    margin 1.25em 0
  ul
    padding-left 1em
  ul, ol
    ul, ol
      margin-left 1.5em
  ul ul, ol ul, ul ol, li
    margin-top 0.425em
    margin-bottom 0.425em

  a
    color #083
    text-decoration none
    font-weight bold
    cursor pointer
    &:link, &:visited
      border-bottom 0.1em solid #083
    &:visited
      border-bottom 0.1em dotted #083
    &:hover, &:active
      color #000
      border-bottom 0.1em solid transparent
    &:focus
      outline 0
      color #FFF
      background #083
    &.imagelink
      border-bottom none

  mark
    background yellow
    color #000
  pre.diff mark:nth-of-type(1) { background: yellow }
  pre.diff mark:nth-of-type(2) { background: lighten(lime, 10%) }
  pre.diff mark:nth-of-type(3) { background: lighten(fuchsia, 40%) }
  pre.diff mark:nth-of-type(4) { background: aqua }
  pre.diff mark:nth-of-type(5) { background: tomato }

  pre, code
    font-family Monaco, "Bitstream Vera Sans Mono", "DejaVu Sans Mono" "Lucida Console", Consolas, Terminal, monospace
  pre
    overflow hidden
    line-height 1.4
    text-align left !important
    font-size 0.75em
  code
    background #EBEBEB
    color #333
    padding 0.1em
  pre code
    background none
    padding 0
  blockquote, q
    font-style italic
    text-align left
  q
    quotes "\201E" "\201C" "\201A" "\2018"
  blockquote + p.cite
    text-align left
    font-size 0.8em
    margin-top -0.5em
    margin-bottom 2em

  kbd
    font normal .85em/1 "Lucida Grande", Lucida, Arial, sans-serif
    border-radius 0.2em
    border none
    background rgb(250, 250, 250)
    background linear-gradient(rgb(210, 210, 210), rgb(255, 255, 255))
    color rgb(50, 50, 50)
    text-shadow 0 0 2px rgb(255, 255, 255)
    box-shadow inset 0 0 1px rgb(255, 255, 255), inset 0 0 0.4em rgb(200, 200, 200), 0 0.1em 0 rgb(130, 130, 130), 0 0.11em 0 rgba(0, 0, 0, 0.4), 0 0.1em 0.11em rgba(0, 0, 0, 0.9)
    display inline-block
    line-height 1
    padding 0.2em 0.3em

  p.footnotes
    text-align left
    font-size 0.5em


@media print

  body
    background white
    color black
  mark
    text-decoration underline